.ui-icon-minus:after {background:url(../../images/wechat/ico_toggle_white02_1.png) no-repeat 50% 50%;
	background-size:14px 14px;
	display:inline-block;
}
.ui-icon-plus:after {background:url(../../images/wechat/ico_toggle_white01_1.png) no-repeat 50% 50%;
	background-size:14px 14px;
	display:inline-block;
}
.order_box_manager h4 a.ui-btn:hover.ui-icon-minus:after{
	background:url(../../images/wechat/ico_toggle_white02.png) no-repeat 50% 50% !important;
	background-size:14px 14px !important;
}
.order_box_manager h4 a.ui-btn:hover.ui-icon-plus:after{
	background:url(../../images/wechat/ico_toggle_white01.png) no-repeat 50% 50% !important;
	background-size:14px 14px !important;
}